@model BookingSite.Web.ViewModels.BookingViewModel

@{
    ViewData["Title"] = "Booking";
}

<h2>Booking</h2>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="AddBooking">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="PaxName" class="control-label"></label>
                <input asp-for="PaxName" class="form-control" />
                <span asp-validation-for="PaxName" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="ContactPhone" class="control-label"></label>
                <input asp-for="ContactPhone" class="form-control" />
                <span asp-validation-for="ContactPhone" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Hotel.HotelName" class="control-label"></label>
                <input asp-for="Hotel.HotelName" class="form-control" readonly />
            </div>
            <div class="form-group">
                <label asp-for="Hotel.City" class="control-label"></label>
                <input asp-for="Hotel.City" class="form-control" readonly />
            </div>
            <div class="form-group">
                <label asp-for="Hotel.StarRating" class="control-label"></label>
                <input asp-for="Hotel.StarRating" class="form-control" readonly />
            </div>
            <div class="form-group">
                <label asp-for="HotelRoom.RoomType" class="control-label"></label>
                <input asp-for="HotelRoom.RoomType" class="form-control" readonly />
            </div>
            <div class="form-group">
                <label asp-for="HotelRoom.Tariff" class="control-label"></label>
                <input asp-for="HotelRoom.Tariff" class="form-control" readonly />
            </div>
            <div class="form-group">
                <label asp-for="ChickInDate" class="control-label"></label>
                <input asp-for="ChickInDate" class="form-control" readonly />
            </div>
            <div class="form-group">
                <label asp-for="CheckoutDate" class="control-label"></label>
                <input asp-for="CheckoutDate" class="form-control" readonly />
            </div>
            <div class="form-group">
                <label asp-for="NumberOfRooms" class="control-label"></label>
                <input asp-for="NumberOfRooms" class="form-control" readonly />
            </div>
            <div class="form-group">
                <input type="submit" value="Create" class="btn btn-default" />
            </div>
        </form>
    </div>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
